.charts-graphs
    max-width 400px
    border: 1px solid #DEDEDE
    box-sizing: border-box
    padding: clamp(5px, 2vw, 20px)
    &__subheading 
        font-size: 22px
        font-weight 400
        margin-bottom: clamp(15px, 3vw, 25px)


.charts
    &__wrapper
        display: flex
    &__list 
        margin-left: 10px
        & > li   
            display: flex
            align-items: center
            margin-right: 10px
            margin-top: 6px
            &:before 
                margin-right: 8px
                content: ' '
                display: inline-block
                width: 15px
                height 15px
                background-color: var(--bg-c)
            & > span 
                margin-left: auto  
        

